	<panel id="FrontendConfigPanel">
		<field id="frontend.configpanel.title.label"
			type="title" />
		<field type="custom" minRow="1" maxRow="1"
			variable="microservice.frontend.count">
			<spec>
				<col>
					<field type="text" variable="microservice.frontend.uri">
						<spec id="frontend.configpanel.host.label" size="15"
							set="${microservice.frontend.uri}" />
					</field>
				</col>
				<col>
					<field type="text" variable="microservice.frontend.port">
						<spec id="frontend.configpanel.port.label" size="15"
							set="${microservice.frontend.port}">
						</spec>
						<validator
							class="com.izforge.izpack.panels.userinput.validator.PortValidator"
							id="validator.port.error.label">
						</validator>
					</field>
				</col>
			</spec>
		</field>
		<field type="text" variable="regards.config.cloud.gateway.uri">
			<spec id="frontend.configpanel.gateway.address.label" size="15" set="${regards.config.cloud.gateway.uri}"/>
		</field>
		<field type="text" variable="regards.config.cloud.gateway.port">
			<spec id="frontend.configpanel.gateway.port.label" size="15" set="${regards.config.cloud.gateway.port}"/>
			<validator
				class="com.izforge.izpack.panels.userinput.validator.PortValidator"
				id="validator.port.error.label" />
		</field>
	</panel>

