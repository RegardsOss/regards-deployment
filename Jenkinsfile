#!/usr/bin/env groovy

pipeline {
    agent any
	
    stages {
        stage('Build') {
            steps {
                echo 'Building..'
                sh 'mvn clean install' 
            }
            post {
                success {
                    junit 'target/surefire-reports/**/*.xml' 
                }
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}